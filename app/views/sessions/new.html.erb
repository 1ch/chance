<div class="bs-docs-section">
        <div class="row">
                <div class="col-lg-12">
                        <div class="bs-example">
                                <div class="jumbotron">
                                        <%= image_tag('health.gif', :height => '230', :align => 'right') %>
                                        <h1>Chance :)</h1>
                                        <h3>This site can be managed your health easily.</h3>
                                        <p><a href="/learns/" class="btn btn-primary btn-lg">Learn more</a></p>
                                </div>
                        </div>
                </div>
        </div>
        <% if user_signed_in? %>
                <div class="row">
                        <div class="col-lg-3">
                                <div class="panel panel-danger">
                                        <div class="panel-heading">
                                                <h2 class="panel-title">
                                                        <%= link_to 'Cooking :)', "/cookings/" %>
                                                </h2>
                                        </div>
                                        <div class="panel-body">
                                                <%= link_to 'This contents can be managed your food life. please go to this contents.', "/cookings/" %>
                                        </div>
                                </div>
                        </div>
                        <div class="col-lg-3">
                                <div class="panel panel-info">
                                        <div class="panel-heading">
                                                <h2 class="panel-title">Houshing</h2>
                                        </div>
                                        <div class="panel-body">
                                                This contents can be managed your house life. please go to this contents.
                                        </div>
                                </div>
                        </div>
                        <div class="col-lg-3">
                                <div class="panel panel-success">
                                        <div class="panel-heading">
                                                <h2 class="panel-title">Recipe</h2>
                                        </div>
                                        <div class="panel-body">
                                                This contents can be managed your recipe life. please go to this contents.
                                        </div>
                                </div>
                        </div>
                        <div class="col-lg-3">
                                <div class="panel panel-warning">
                                        <div class="panel-heading">
                                                <h2 class="panel-title">Exercise</h2>
                                        </div>
                                        <div class="panel-body">
                                                This contents can be managed your exercise life. please go to this contents.
                                        </div>
                                </div>
                        </div>
                </div>
        <% else %>
                <div class="row">
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-4">
                                <div class="panel panel-success">
                                        <div class="panel-heading">
                                                <h2 class="panel-title">Please Login</h2>
                                        </div>
                                        <div class="panel-body">
                                                <div align="center">
                                                        <%= link_to image_tag('facebook_login.jpg', :width => '200', :align => 'center'), user_omniauth_authorize_path(:facebook)  %>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-lg-4">
                        </div>
                </div>
        <% end %>
</div>
